<h1><%= I18n.t('article.edit_article') %></h1>


<%= form_for :article, url: article_url(@article), method: :put do |f| %>
  <% if @article && @article.errors.any? %>
    <p>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </p>
  <% end %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit 'Save' %>
  </p>

<% end %>