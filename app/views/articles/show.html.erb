<h1><%= @article.title %></h1>
<p>
  <%= @article.text %>
</p>
<hr>
<br>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %> <br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit 'Create comment' %>
  </p>
<% end %>
</p>
<br>
<% @article.comments.each do |comment| %>
  <% if comment.id != nil %>
    <p>
      <%= comment.author %>
    </p>
    <p>
      <%= comment.body %>
    </p>
    <hr>
  <% end %>
<% end %>
